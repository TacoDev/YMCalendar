{
    "compilerOptions": {
        "lib": [
            "ESNext",
            "dom",
            "dom.iterable"
        ],
        "target": "es2018",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "declaration": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "emitDeclarationOnly": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "rootDir": "./src",
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
}